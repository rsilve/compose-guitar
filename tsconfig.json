{
  "compilerOptions": {
    "target": "es2020",
    "types": ["vite/client", "gapi", "gapi.auth2", "gapi.client.drive", "mocha", "node"],
    "module": "es2020",
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./out",
    "rootDir": "./src",
    "baseUrl": "./",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
  },
  "rootDirs": ["src"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
