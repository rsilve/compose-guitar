{
  "name": "compose-guitar.com",
  "version": "1.0.1",
  "description": "",
  "main": "index.html",
  "type": "module",
  "watch": {
    "start:assets": {
      "patterns": [
        "src/index.html",
        "src/sw.js",
        "src/robots.txt",
        "src/assets/*"
      ],
      "extensions": "ts,js,css,png"
    }
  },
  "scripts": {
    "clean": "rm -rf build dist",
    "build:compile": "tsc",
    "build:dist": "rollup -c",
    "build:assets": "copyfiles -u 1 src/index.html src/sw.js src/robots.txt src/assets/** build/",
    "build:all": "npm-run-all clean build:assets build:compile",
    "build:compile:watch": "npm run build:compile -- --watch",
    "build:prod": "npm-run-all build:all build:dist",
    
    "start:assets:watch": "npm-watch build:assets",
    "start:build:watch": "npm-run-all clean build:assets build:compile:watch",
    "start:serve:watch": "wds --watch",

    "start": "concurrently --kill-others 'npm:start:*'",
    
    "test": "web-test-runner",
    "test:ci": "web-test-runner --concurrency 1  --concurrent-browsers 1",
    "test:watch": "web-test-runner --watch",
    
    "verify": "npm-run-all verify:*",
    "verify:lint": "eslint src --ext .ts ",
    "verify:prettier": "prettier --check src",
    
    "deploy:beta": "git tag -f beta && git push --delete origin beta && git push --tags",

    "prepare": "husky install",

    "prepare:playwright": "playwright install chromium",
    "prepare:playwright-deps": "playwright install-deps chromium",
    
    "pretest": "npm-run-all prepare:playwright",
    "pretest:watch": "npm-run-all prepare:playwright"
    

  },
  "author": "Robert Silve <robert@silve.net>",
  "license": "ISC",
  "devDependencies": {
    "@open-wc/testing": "^3.0.3",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "@web/dev-server": "^0.1.28",
    "@web/dev-server-legacy": "^0.1.7",
    "@web/dev-server-rollup": "^0.3.13",
    "@web/rollup-plugin-copy": "^0.3.0",
    "@web/rollup-plugin-html": "^1.10.1",
    "@web/test-runner": "^0.13.22",
    "@web/test-runner-playwright": "^0.8.8",
    "audit-ci": "^5.1.2",
    "copyfiles": "^2.4.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-wc": "^1.3.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "lit-html": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.10.0",
    "prettier": "^2.5.0",
    "rollup": "^2.60.1",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-sri": "^1.3.4",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^12.0.1",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@types/gapi": "^0.0.41",
    "@types/gapi.auth2": "^0.0.55",
    "@types/gapi.client.drive": "^3.0.13",
    "@types/mocha": "^9.0.0",
    "lit": "^2.0.2",
    "tslib": "^2.3.1"
  }
}
