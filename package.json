{
  "name": "compose-guitar.com",
  "version": "1.0.1",
  "description": "",
  "main": "index.html",
  "type": "module",
  "watch": {
    "build:assets": {
      "patterns": [
        "src/index.html",
        "src/sw.js",
        "src/robots.txt",
        "src/assets/*"
      ],
      "extensions": "ts,js,css,png"
    }
  },
  "scripts": {
    "clean": "rm -rf build dist",
    "build": "rm -rf build/; npm run build:assets; tsc",
    "build:assets": "mkdir -p build; cp -R src/index.html src/editor/sw.js src/robots.txt src/assets build/",
    "build:assets:watch": "npm-watch",
    "build:watch": "rm -rf build/; npm run build:assets; tsc --watch",
    "build:prod": "rm -rf dist/; npm run build; rollup -c",
    "serve": "wds -r build --watch",
    "test": "web-test-runner",
    "test:ci": "web-test-runner --concurrency 1  --concurrent-browsers 1",
    "test:watch": "web-test-runner --watch",
    "lint": "eslint src --ext .ts ",
    "prettier:check": "prettier --check src"
  },
  "author": "Robert Silve <robert@silve.net>",
  "license": "ISC",
  "devDependencies": {
    "@open-wc/testing": "^2.5.33",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "@web/dev-server": "^0.1.28",
    "@web/dev-server-legacy": "^0.1.7",
    "@web/rollup-plugin-copy": "^0.3.0",
    "@web/rollup-plugin-html": "^1.8.0",
    "@web/test-runner": "^0.13.22",
    "@web/test-runner-playwright": "^0.8.8",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "npm-watch": "^0.10.0",
    "prettier": "2.4.1",
    "rollup": "^2.52.6",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@types/mocha": "^9.0.0",
    "lit": "^2.0.2",
    "tslib": "^2.3.1"
  }
}
