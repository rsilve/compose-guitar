{
  "name": "compose-guitar.com",
  "version": "1.2.1-0",
  "description": "",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "clean": "rm -rf build out dist",
    "build:compile": "tsc",
    "build:compile:watch": "npm run build:compile -- --watch",
    "build:prod": "vite build",
    "start": "vite",
    "test": "npm-run-all build:compile test:wtr",
    "test:wtr": "web-test-runner",
    "test:watch": "npm run test:wtr -- --watch",
    "test:ci": "npm-run-all build:compile test:wtr",
    "preview": "vite preview",
    "verify": "npm-run-all verify:*",
    "verify:lint": "eslint src --ext .ts ",
    "verify:prettier": "prettier --check src",
    "prepare": "husky install",
    "prepare:playwright": "playwright install chromium",
    "prepare:playwright-deps": "playwright install-deps chromium",
    "prepare:test": "npm-run-all prepare:playwright prepare:playwright-deps",
    "localize:extract": "lit-localize extract",
    "localize:build": "lit-localize build",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:post": "npm version prerelease && git push && git push --tags",
    "deploy:beta": "git tag -f beta && git push --tags -f",
    "deploy:prod": "git tag -f prod.$(date +%Y%m%d) && git push --tags -f"
  },
  "author": "Robert Silve <robert@silve.net>",
